{
	"name": "tessiverse",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"prepare": "svelte-kit sync",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"predeploy": "npx swa build",
		"deploy": "npx swa deploy ${NODE_ENV:-preview} --env ${NODE_ENV:-preview}",
		"postdeploy": "cd build/server && func azure functionapp publish tessiverse-api $(if [ \"$NODE_ENV\" != production ]; then echo --slot ${NODE_ENV:-preview}; fi)"
	},
	"devDependencies": {
		"@azure/app-configuration-provider": "^1.1.2",
		"@azure/functions": "^4.0.0",
		"@azure/keyvault-secrets": "^4.9.0",
		"@azure/static-web-apps-cli": "^2.0.1",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.17.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^0.21.16",
		"clsx": "^2.1.1",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"formsnap": "^1.0.1",
		"globals": "^15.0.0",
		"lucide-svelte": "^0.460.1",
		"mdsvex": "^0.11.2",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-adapter-azure-swa": "^0.20.1",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.20.1",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.4.4",
		"vitest": "^2.0.4",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"jsonwebtoken": "^9.0.2",
		"jwks-rsa": "^3.1.0",
		"mode-watcher": "^0.5.0",
		"node-html-markdown": "^1.3.0"
	}
}
